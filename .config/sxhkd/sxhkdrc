#
# Applications
#

super + Return
    alacritty -e fish

super + shift + Return
    alacritty

super + d
    rofi -modi drun -show drun

super + shift + d
    rofi -modi run -show run

super + g
    rofi -modi window -show window

super + e
    thunar

super + w
    firefox

super + n
    alacritty -e 'nvim -c :VimwikiIndex'

#
# i3-Specific
#

super + shift+ q
    i3-msg kill

super + shift + r
    i3-msg restart;

super + shift + e
    i3-msg exit

super + shift + p
    i3-msg move scratchpad

super + p
    i3-msg scratchpad show


#
# EQ-specific
#


### Chorded EQ COMMANDS

Num_Lock
    send_command assist

KP_Enter
    send_command sit


### KEYPAD EQ COMMANDS

# KP7
KP_Home; {KP_Home, KP_Up, KP_Prior, KP_Left, KP_Begin, KP_Right, KP_End, KP_Down, KP_Next, KP_Insert}
    send_command heal {quikli, haettas, deglaze, broil, saute, flambe, broil_pet, saute_pet, flambe_pet, slowli}

# KP8
KP_Up
    send_command back

# KP9
KP_Prior
    send_command heal pets

# KP4
KP_Left
    send_command nuke

KP_Begin
    send_command skin

KP_Right
    send_command snare

KP_End
    send_command spread

KP_Down
    notify-send "test" "KP 2"

KP_Next
    notify-send "test" "KP 3"

KP_Insert
    notify-send "test" "KP 0"

KP_Delete
    notify-send "test" "KP ."

KP_Divide
    notify-send "test" "KP /"

KP_Multiply
    notify-send "test" "KP *"

KP_Subtract
    notify-send "test" "KP -"

KP_Add
    send_command follow

