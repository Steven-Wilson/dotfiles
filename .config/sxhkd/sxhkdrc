#
# Applications
#
super + Return
    xfce4-terminal -e fish

super + shift + Return
    xfce4-terminal

super + d
    rofi -modi drun -show drun

super + shift + d
    rofi -modi run -show run

super + e
    nautilus

super + w
    firefox

super + n
    xfce4-terminal -e 'nvim -c :VimwikiIndex'

#
# i3-Specific
#

super + shift+ q
    i3-msg kill

super + shift + r
    i3-msg restart;

super + shift + e
    i3-msg exit

super + shift + p
    i3-msg move scratchpad

super + p
    i3-msg scratchpad show


